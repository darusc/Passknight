{
    "manifest_version": 3,
    "name": "Passknight",
    "description": "Password manager & vault",
    "version": "0.0.1",
    "action": {
        "default_popup": "index.html",
        "default_title": "Open"
    },
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "background": {
        "service_worker": "workers/service_worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["https://*/*"]
        }
    ],
    "icons": {
        "48": "shield.png",
        "128": "shield.png"
    }
}