{
    "manifest_version": 2,
    "name": "Passknight",
    "description": "Password manager & vault",
    "version": "0.0.1",
    "browser_specific_settings": {
        "gecko": {
            "id": "passknight@example.com"
        }
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Open"
    },
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "contextMenus",
        "clipboardWrite",
        "clipboardRead",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["workers/service_worker.js"],
        "type": "module"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "48": "shield.png",
        "128": "shield.png"
    }
}