<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="letterPasswordElement" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#c9c9c9"/>
    </Style>
    <Style x:Key="numberPasswordElement" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#6f9df1"/>
    </Style>
    <Style x:Key="symbolPasswordElement" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#ff8d85"/>
    </Style>
</ResourceDictionary>